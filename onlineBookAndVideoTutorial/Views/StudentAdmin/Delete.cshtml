@model onlineBookAndVideoTutorial.Models.Registration

@{
    //Layout = null;
}





   
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet"/>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>

    <style>
        .kt {
            width: 115px;
        }

        .bt {
            width: 115px;
        }

        .dld {
            /*margin-left: 100px;
            margin-right: 100px;*/
            margin-top: 80px;
            padding: 55px 60px;
            background-color: #faf8f3;
            border: 0px;
            border-style: outset;
            box-shadow: 0px 0px 20px #d8d4d4;
            border-radius: 10px;
            margin-bottom: 50px;
        }

        #mytable {
            margin-bottom: 20px;
        }

        .aa {
            margin-top: 60px;
        }
    </style>
<body>
    <div class="container">
        <div class="dld">
            <h3>Are you sure to delete this?</h3>

            <table id="mytable" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SemesterId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        <td>
                            @Html.DisplayFor(item => item.DepartmentId)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.SemesterId)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.Mobile)
                        </td>
                        <td>
                            <img style="height: 90px;" src="~/@Html.DisplayFor(item => item.Image)">
                            @*@Html.DisplayFor(item => item.Image)*@
                        </td>
                    </tr>
                </tbody>

            </table>
            <center>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color aa">
                        <input type="submit" value="Delete" class="btn btn-danger kt" /> |
                        @Html.ActionLink("Back", "StudentIndex", null, new { @class = "btn btn-warning bt" })
                    </div>
                }
            </center>
        </div>
    </div>


<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script>
