@{
    ViewBag.Title = "Login";
}
<link href="~/Content/login.css" rel="stylesheet"/>
<style>
    .cerror {
        color: white;
    }
</style>

<div class="container">
    <center>
        <div class="login">
            <p class="lbl-login animated rubberBand" style="font-family: Monoton;">
                Admin Login
            </p>
            @if (ViewBag.Error == "Error")
            {
                <p class="cerror" id="error">Login Failed: Check your login.</p>
            }



            <form style="padding: 2em 5em 5em; margin-left: 1em;" action="~/Authentication/LoginAdmin" method="POST">
                <table>
                    <tr>
                        <td></td>
                        <td>
                            <input class="user-name" type="text" name="username" id="username" placeholder="Username" required />
                        </td>
                    </tr>
                    <tr>
                        <td></td>

                        <td>
                            <input class="user-name" type="password" name="password" id="password" placeholder="Password" required />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input class="btn animate-btn" style="width: 100%; margin: 10px 0; background-color: green; color: white; font-weight: 700;" type="submit" value="Login" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        @*<center>
                            <td><a href="~/Authentication/Register" style="background-color: white; color: black;">Not Registerd? Register.</a></td>
                        </center>*@

                    </tr>
                </table>
            </form>
        </div>
    </center>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#error").hide(1000).empty();
            }, 5000);
        });
    </script>
}