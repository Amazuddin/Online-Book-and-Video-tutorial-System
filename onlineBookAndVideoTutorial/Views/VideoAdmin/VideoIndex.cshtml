@model IEnumerable<onlineBookAndVideoTutorial.Models.Video>

@{
    //Layout = null;
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
   
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <style>
        .col-sz {
            width: 100px;
        }

        .wod {
            width: 90%;
            margin-bottom: 2px;
        }

        .indexdesignbox {
            margin: 30px 30px 30px 30px;
            padding: 30px;
        }

        .newbox {
            margin-bottom: 45px;
            width: 220px;
            font-family: Monoton;
            font-size: 21px;
            color: white;
        }
    </style>


</head>
<body>
<div class=" indexdesignbox">
    <center>
        <p>
            @Html.ActionLink("Add New Video", "Create", null, new {@class = "newbox btn btn-primary"})
        </p>
    </center>
    <table id="datatable" class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>
               Department
            </th>
            <th>
                Semester
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
           
            <th>
                Action
            </th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SemesterId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VideoName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
              
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-primary wod"}) <br/>
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger wod"})
                </td>
            </tr>
        }
    </table>
</div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#datatable').DataTable();
        });
    </script>
</body>

