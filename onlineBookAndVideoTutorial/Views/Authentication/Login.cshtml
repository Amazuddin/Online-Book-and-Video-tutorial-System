@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Login.css" rel="stylesheet"/>
<link href="~/Content/aos.css" rel="stylesheet"/>
<style>
    #eyep {
        color: royalblue;
        padding-left: 5px;
        padding-top: 6px;
        position: fixed;
    }

    #hide1 { display: none; }

    .cerror {
        color: red;
        font-style: oblique;
       
        text-shadow: 1px 1px 1px black;
    }

    .error {
        color: red;
    }

</style>
<div class="container">
    <center>
        <div class="login">


            @*<div data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="2000">

                
            </div>*@

            <p class="lbl-login animated tada" style="font-family: Monoton;">
                Login
            </p>

            @if (ViewBag.Error == "Error")
            {
                <p class="cerror ed" id="error">Login Failed: Check your login.</p>
            }


            <form style="padding: 2em 5em 5em; margin-left: 1em;" action="~/Authentication/LoginUser" method="POST">
                <table>
                    <tr>
                        <td></td>
                        <td>
                            <input class="user-name" type="text" name="username" id="username" placeholder="Username" required/>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        @*<td><label for="password">Password </label></td>*@
                        <td>
                            <input class="user-name" type="password" name="password" id="myInput" placeholder="Password" required/><br/>

                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="font-weight: 700; color: blue; ">
                            <input type="checkbox" onclick="myFunction()"> Show Password
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input class="btn animate-btn" style="width: 100%; margin: 10px 0; background-color: green; color: white;  font-weight: 700;" type="submit" value="Login"/>
                        </td>



                    </tr>
                    <tr>
                        <td></td>
                        <center>
                            <td>
                                <a href="~/Authentication/Register" style="background-color: white; color: black;">Not Registerd? Register.</a>
                            </td>
                        </center>

                    </tr>
                </table>
            </form>
        </div>
    </center>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        AOS.init();
    </script>


    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

    <script>


        $(document).ready(function() {
            setTimeout(function() {
                $("#error").hide(1000).empty();
            }, 5000);
        });
    </script>
}