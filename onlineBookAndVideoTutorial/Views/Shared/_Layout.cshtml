<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book & video tutorial</title>
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Monoton" />
   
    <link href="~/Content/aos.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/fontawesome.css" rel="stylesheet"/>
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

</head>
<body>
    <nav style="background-color: #152F4F;" class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand myclass  animated bounceInLeft" href="#" style="font-family: Monoton; ">
            @*<i style="font-size: 47px;" class="logo"></i>*@
            BGC online book and video tutorial
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="menual collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">

            @if (Session["StudentId"] == null && Session["AdminId"] == null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Login" href="@Url.Action("Login","Authentication")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-sign-in-alt icn"></i> Login</button></a>
                    <a class="nav-item nav-link @ViewBag.Register" href="@Url.Action("Register", "Authentication")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-user-plus"></i> Register</button></a>
                    
                </div>
            }
            @if (Session["StudentId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.HomePage " href="@Url.Action("HomePage", "Primary")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-home"></i> Home </button></a>
                    <a class="nav-item nav-link @ViewBag.OnlineBook" href="@Url.Action("OnlineBook", "Primary")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-book"></i> Book</button></a>
                    <a class="nav-item nav-link @ViewBag.Videotutorial" href="@Url.Action("Videotutorial", "Primary")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-video"></i> Video </button></a>       
                    <a class="nav-item nav-link @ViewBag.Profile" href="@Url.Action("Profile", "Primary")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-user"></i> Profile </button></a>       
                    <a class="nav-item nav-link " href="@Url.Action("Logout", "Authentication")"> <button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-sign-out-alt"></i> Logout </button></a>
                </div>
            }
            @if (Session["AdminId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.StudentIndex" href="@Url.Action("StudentIndex", "StudentAdmin")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-user-graduate"></i> Student </button></a>
                    <a class="nav-item nav-link @ViewBag.BookIndex" href="@Url.Action("BookIndex", "BookAdmin")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-book"></i> Book </button></a>
                    <a class="nav-item nav-link @ViewBag.VideoIndex" href="@Url.Action("VideoIndex", "VideoAdmin")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-video"></i> Video </button></a>
                    <a class="nav-item nav-link " href="@Url.Action("LogoutAdmin", "Authentication")"><button class="btn btn-primary" style="width: 110px; height: 45px; background-color: #152F4F;"><i class="fas fa-sign-out-alt"></i> Logout </button></a>
                </div>
            }
        </div>
    </nav>
@*<div class="container body-content">*@
    @RenderBody()

@*</div>*@



